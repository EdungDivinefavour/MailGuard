# MailGuard Configuration
# This is a template file. Copy this to .env and customize as needed.
# The .env file is automatically created from this file if it doesn't exist.

# SMTP Proxy Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=2525
UPSTREAM_SMTP_HOST=smtp.example.com
UPSTREAM_SMTP_PORT=25

# Apache Tika Configuration
# In Docker, this will be overridden to http://tika:9998
TIKA_SERVER_URL=http://localhost:9998

# Flask API Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=False
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///mailguard.db

# Policy Configuration
DEFAULT_POLICY=tag
MAX_ATTACHMENT_SIZE_MB=50
MAX_ARCHIVE_DEPTH=5

# Detection Thresholds
MIN_CONFIDENCE=0.7
ENABLE_SPACY=false

# Quarantine Configuration
QUARANTINE_DIR=./quarantine
